<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ventrux.thescratchbtw" version="2.4" versionCode="7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>The Scratch</name>
    <description>
        Booker T Washington
    </description>
    <author email="trennon.dunn@mail.ventrux.com" href="http://ventrux.com/">
        Trennon Dunn
    </author>
    <content src="index.html" />
	<!-- SEP -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<!-- SEP -->
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="default" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-maxSdkVersion" value="23" />
    <preference name="android-installLocation" value="auto" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ErrorUrl" value="error.html"/>
    <preference name="BackgroundColor" value="0xF65100"/>
    <preference name="KeepRunning" value="false"/>
    <preference name="DisallowOverscroll" value="false"/>
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="disable-cursor" value="false" />
	<platform name="android">
		<splash src="res/screen/android/screen-hdpi-portrait.jpg" density="port-hdpi"/>
		<splash src="res/screen/android/screen-ldpi-portrait.jpg" density="port-ldpi"/>
		<splash src="res/screen/android/screen-mdpi-portrait.jpg" density="port-mdpi"/>
		<splash src="res/screen/android/screen-xhdpi-portrait.jpg" density="port-xhdpi"/>
	</platform>
	<icon src="res/icon-96-xhdpi.png" />
</widget>
